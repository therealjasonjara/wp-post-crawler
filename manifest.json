{
  "manifest_version": 3,
  "name": "WordPress Post Crawler",
  "version": "2.1.0",
  "description": "Crawl WordPress posts including drafts, extract title, content, meta description, and images. Export to JSON or CSV. Works in background!",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/wp-admin/edit.php*", "*://*/wp-admin/post.php*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
